<!-- res/drawable/square.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- سایه (کمی پخش به سمت پایین و راست) -->
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#888888" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- مربع اصلی -->
    <item>
        <shape android:shape="rectangle">
            <!-- گرادینت ساده و خوش‌رنگ -->
            <gradient
                android:startColor="#65C1FF"
                android:endColor="#2259FF"
                android:angle="135" />
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#2200B2" />
            <size android:width="16dp" android:height="16dp" />
        </shape>
    </item>

</layer-list>
